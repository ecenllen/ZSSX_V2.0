<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="@color/view_line"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="0.6dp"
        android:left="0.6dp"
        android:right="0.6dp"
        android:top="0.6dp">
        <shape>
            <solid android:color="#ffffff"/>
            <corners android:radius="8dp"/>
            <padding
                android:bottom="0.6dp"
                android:left="0.6dp"
                android:right="0.6dp"
                android:top="0.6dp"/>

        </shape>
    </item>

</layer-list>
