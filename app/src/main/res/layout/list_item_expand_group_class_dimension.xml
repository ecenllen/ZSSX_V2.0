<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_group_student_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="学生姓名"
        android:textColor="@color/word_color_666666"
        android:textSize="@dimen/one_level_word" />

    <TextView
        android:id="@+id/tv_group_student_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_group_student_name"
        android:text="（学号）"
        android:textColor="@color/word_color_666666"
        android:textSize="@dimen/two_level_word" />

    <TextView
        android:id="@+id/tv_group_num_score_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/group_state"
        android:text="分"
        android:textColor="@color/main_color"
        android:textSize="@dimen/one_level_word" />

    <TextView
        android:id="@+id/tv_group_num_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tv_group_num_score_name"
        android:text="0"
        android:textColor="@color/main_color"
        android:textSize="@dimen/one_level_word" />

    <TextView
        android:id="@+id/tv_minus_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/tv_group_num_score"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="-"
        android:textColor="@color/main_color"
        android:textSize="@dimen/one_level_word"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/group_state"
        android:layout_width="16dp"
        android:layout_height="12dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />
</RelativeLayout>