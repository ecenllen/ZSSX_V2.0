<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:background="@drawable/popup_add_protal_bg"
              android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/layout_plan_protal"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_plan_class"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/plan_protal"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divide_line"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/view"/>

    <LinearLayout
        android:id="@+id/layout_random_protal"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginLeft="20dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_random_class"
            android:layout_marginRight="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/random_protal"
            />
    </LinearLayout>
</LinearLayout>