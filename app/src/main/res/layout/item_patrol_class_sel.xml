<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:card_view="http://schemas.android.com/tools"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:orientation="vertical"
                                    android:padding="2dp"
                                    app:cardCornerRadius="1dp"
                                    app:contentPadding="10dp"
                                    card_view:cardPreventCornerOverlap="true">

    <RelativeLayout
        android:id="@+id/ll_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tv_class_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxEms="8"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/gray_666666"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tv_class_departmen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/tv_department"
                android:text="状态："
                android:textColor="@color/gray_999999"/>

            <TextView
                android:singleLine="true"
                android:maxEms="5"
                android:id="@+id/tv_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/main_color"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp">

                <TextView
                    android:id="@+id/tv_class_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上课节次："
                    android:textColor="@color/gray_999999"/>

                <TextView
                    android:id="@+id/tv_class_num2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/tv_class_num"
                    android:ellipsize="end"
                    android:paddingLeft="3dp"
                    android:text="第一节"
                    android:textColor="@color/gray_999999"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/tv_teacher_name"
                    android:text="上课教师："
                    android:textColor="@color/gray_999999"/>

                <TextView
                    android:maxEms="5"
                    android:singleLine="true"
                    android:id="@+id/tv_teacher_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:ellipsize="end"
                    android:text="孙悟空"
                    android:textColor="@color/gray_999999"/>

            </RelativeLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/right_arrow_normal"/>
        </RelativeLayout>

    </RelativeLayout>

    <GridLayout
        android:id="@+id/rl_patrol_sel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp"
        android:columnCount="3"
        android:orientation="horizontal"/>

</android.support.v7.widget.CardView>