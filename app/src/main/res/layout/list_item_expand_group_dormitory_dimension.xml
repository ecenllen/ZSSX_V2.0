<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_group_student_bed"
        style="@style/dormitory_option_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="right"
        android:minEms="2"
        android:text="10床" />

    <TextView
        android:id="@+id/tv_group_left_brackets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        style="@style/dormitory_option_item_name"
        android:layout_toRightOf="@+id/tv_group_student_bed"
        android:text="：" />

    <TextView
        android:id="@+id/tv_group_student_name"
        style="@style/dormitory_option_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_group_num_score"
        android:layout_toRightOf="@+id/tv_group_left_brackets"
        android:ellipsize="end"
        android:paddingRight="4dp"
        android:singleLine="true"
        android:text="学生姓名 long name" />

    <TextView
        android:id="@+id/tv_group_num_score_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/group_state"
        android:text="分"
        android:textColor="@color/main_color"
        android:textSize="@dimen/one_level_word" />

    <TextView
        android:id="@+id/tv_group_num_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_group_num_score_name"
        android:text="0"
        android:textColor="@color/main_color"
        android:textSize="@dimen/one_level_word" />

    <TextView
        android:id="@+id/tv_minus_sign_dormitory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_group_num_score"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:text="-"
        android:textColor="@color/main_color"
        android:textSize="@dimen/one_level_word"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/group_state"
        android:layout_width="16dp"
        android:layout_height="12dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

</RelativeLayout>