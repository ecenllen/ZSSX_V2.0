<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/f4f4f4"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">
    <include
        layout="@layout/include_toolbar"/>
    <!--搜索教师-->
    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:id="@+id/layout_search_teacher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wirte_ffffff"
        android:orientation="vertical">
        <com.gta.zssx.pub.widget.ClearEditText
            android:id="@+id/search_edittext_teacher"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:background="@null"
            android:drawableLeft="@drawable/ic_magnifier"
            android:drawablePadding="12dp"
            android:drawableRight="@drawable/ic_close_search"
            android:hint="@string/text_please_key_word_search"
            android:layout_marginRight="15dp"
            android:singleLine="true"
            android:textSize="15sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/divide_line"/>
    </LinearLayout>
    <RelativeLayout
        android:background="@color/wirte_ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_search_teacher"
        android:layout_above="@+id/layout_count_num">
        <!--教师组织架构,默认展示-->
        <ExpandableListView
            android:background="@color/wirte_ffffff"
            android:id="@+id/expendlist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible">
        </ExpandableListView>
       <!--展示搜索结果-->
        <android.support.v7.widget.RecyclerView
            android:background="@color/wirte_ffffff"
            android:id="@+id/rv_search_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:visibility="gone">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_count_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <!--计数条-->
        <include layout="@layout/register_course_count_num_layout" />
    </LinearLayout>
</RelativeLayout>