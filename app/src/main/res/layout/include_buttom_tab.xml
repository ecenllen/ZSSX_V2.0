<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/bottom_layout"
              android:layout_width="match_parent"
              android:layout_height="56dp"
              android:layout_alignParentBottom="true"
              android:background="@color/wirte_ffffff"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divide_line"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tab_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/tab_home_pag_sel_bg"
            android:gravity="center_horizontal"
            android:text="首页"
            android:textColor="@color/tab_sel_bg"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tab_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/tab_add_sel_bg"
            android:gravity="center_horizontal"
            android:text="新增"
            android:textColor="@color/tab_sel_bg"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tab_my"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="4dp"
            android:drawableTop="@drawable/tab_my_sel_bg"
            android:gravity="center_horizontal"
            android:text="我的"
            android:textColor="@color/tab_sel_bg"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>