<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/wirte_ffffff"
    android:visibility="visible">

    <RelativeLayout
        android:layout_marginTop="12dp"
        android:id="@+id/layout_popup_window_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333333">
        <TextView
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:id="@+id/tv_show_select_total_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="70dp"
            android:text="已选择--"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/wirte_ffffff"/>
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_select_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/text_sure"
            android:padding = "15dp"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/wirte_ffffff"
            android:background="@color/main_color"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/iv_show_select_pic"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/count_course_num_selectot"/>

    <TextView
            android:layout_alignParentRight="true"
            android:paddingRight="2dp"
            android:id="@+id/tv_remark_new_select_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/red_remark_bg"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/wirte_ffffff"
            android:textSize="@dimen/sp_14"/>

</RelativeLayout>