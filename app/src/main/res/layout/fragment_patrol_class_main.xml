<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_un_finished"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="105dp"
            android:text="未结束"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_finished"
            android:layout_width="180dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            android:paddingRight="105dp"
            android:text="已结束"
            android:textSize="14sp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divide_line"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPage_patrol"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/f4f4f4"/>

    <include layout="@layout/include_buttom_tab"/>
</LinearLayout>