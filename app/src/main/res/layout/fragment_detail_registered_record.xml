<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/include_toolbar"/>

    <FrameLayout
        android:id="@+id/layout_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--有数据-->
        <ScrollView
            android:id="@+id/sv_main_data_show"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tv_base_info"
                    android:text="基本信息"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/word_color_444444"
                    android:textSize="@dimen/one_level_word"
                    android:background="@color/gray_dcdcdc"/>

                <LinearLayout
                    android:layout_below="@+id/tv_base_info"
                    android:id="@+id/layout_info"
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:background="@color/wirte_ffffff"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp">
                            <TextView
                                android:paddingRight="10dp"
                                android:gravity="center_vertical"
                                android:id="@+id/tv_course_text"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentLeft="true"
                                android:text="@string/text_course_name"
                                android:textSize="@dimen/one_level_word"
                                android:textColor="@color/word_color_999999"/>
                            <TextView
                                android:gravity="center_vertical|right"
                                android:id="@+id/tv_course_name_show"
                                android:layout_toRightOf="@+id/tv_course_text"
                                android:maxLines="10"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text=""
                                android:layout_alignParentRight="true"
                                android:textSize="@dimen/one_level_word"
                                android:textColor="@color/word_color_666666"/>
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/view_line"/>
                        <RelativeLayout
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp">
                            <TextView
                                android:gravity="center_vertical"
                                android:paddingRight="10dp"
                                android:id="@+id/tv_dpat_text"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentLeft="true"
                                android:text="@string/text_apartment"
                                android:textSize="@dimen/one_level_word"
                                android:textColor="@color/word_color_999999"/>
                            <TextView
                                android:gravity="center_vertical|right"
                                android:layout_toRightOf="@+id/tv_dpat_text"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:id="@+id/tv_dpat_show"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text=""
                                android:textSize="@dimen/one_level_word"
                                android:textColor="@color/word_color_666666"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/view_line"/>
                        <RelativeLayout
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp">
                            <TextView
                                android:gravity="center_vertical"
                                android:paddingRight="10dp"
                                android:id="@+id/tv_teacher_text"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentLeft="true"
                                android:text="@string/text_class_headmaster"
                                android:textSize="@dimen/one_level_word"
                                android:textColor="@color/word_color_999999"/>
                            <TextView
                                android:gravity="center_vertical|right"
                                android:layout_toRightOf="@+id/tv_teacher_text"
                                android:ellipsize="end"
                                android:id="@+id/tv_teacher_name_show"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text=""
                                android:layout_alignParentRight="true"
                                android:textSize="@dimen/one_level_word"
                                android:textColor="@color/word_color_666666"/>
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/view_line"/>
                        <RelativeLayout
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp">
                            <TextView
                                android:gravity="center_vertical"
                                android:paddingRight="10dp"
                                android:id="@+id/tv_course_teacher_text"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentLeft="true"
                                android:text="@string/text_class_teacher"
                                android:textSize="@dimen/one_level_word"
                                android:textColor="@color/word_color_999999"/>
                            <TextView
                                android:gravity="center_vertical|right"
                                android:layout_toRightOf="@+id/tv_course_teacher_text"
                                android:ellipsize="end"
                                android:maxLines="10"
                                android:id="@+id/tv_text_class_teacher"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text=""
                                android:layout_alignParentRight="true"
                                android:textSize="@dimen/one_level_word"
                                android:textColor="@color/word_color_666666"/>
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/view_line"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_detail_info"
                    android:layout_below = "@+id/layout_info"
                    android:text="登记详情"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@color/word_color_444444"
                    android:textSize="@dimen/one_level_word"
                    android:background="@color/gray_dcdcdc"/>

                <RelativeLayout
                    android:layout_margin="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/wirte_ffffff"
                    android:orientation="vertical"
                    android:layout_below = "@+id/tv_detail_info">
                    <!--班级人数等考勤信息-->
                    <LinearLayout
                        android:id="@+id/layout_student_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RelativeLayout
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="@string/text_class_total_person"
                                android:textSize="@dimen/one_level_word"
                                android:textColor="@color/word_color_999999"/>
                            <TextView
                                android:id="@+id/tv_class_person_num_show"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:layout_alignParentRight="true"
                                android:textSize="@dimen/one_level_word"
                                android:textColor="@color/word_color_666666"/>
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/view_line"/>
                        <RelativeLayout
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp">
                            <TextView

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:text="@string/text_class_actual_come_person"
                                android:textSize="@dimen/one_level_word"
                                android:textColor="@color/word_color_999999"/>
                            <TextView
                                android:id="@+id/tv_class_actual_come_show"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="@dimen/one_level_word"
                                android:textColor="@color/word_color_666666"
                                android:layout_alignParentRight="true"/>
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/view_line"/>
                    </LinearLayout>
                    <!--<ExpandableListView
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/expanded_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:childDivider="@color/view_line"
                        android:listSelector="#00000000"
                        android:divider="@null"
                        android:dividerHeight="0.5dp"
                        android:scrollbars="none">
                    </ExpandableListView>-->
                    <com.gta.zssx.fun.coursedaily.registerrecord.view.MyExpandListView
                        android:layout_below="@+id/layout_student_info"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/expanded_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:childDivider="@color/wirte_ffffff"
                        android:listSelector="#00000000"
                        android:divider="@color/view_line"
                        android:dividerHeight="0.5dp"
                        android:scrollbars="none">
                    </com.gta.zssx.fun.coursedaily.registerrecord.view.MyExpandListView>
                    <LinearLayout
                        android:layout_below = "@+id/expanded_menu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/view_line"/>
                        <RelativeLayout
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:paddingTop="10dp"
                                android:paddingBottom="10dp"
                                android:paddingRight="10dp"
                                android:id="@+id/tv_remark"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentLeft="true"
                                android:text="@string/text_remark1"
                                android:textSize="@dimen/one_level_word"
                                android:textColor="@color/word_color_999999"
                                android:layout_gravity="center_vertical"/>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@+id/tv_remark"
                                android:layout_alignParentRight="true"
                                android:gravity="center_vertical">
                                <TextView
                                    android:paddingTop="10dp"
                                    android:paddingBottom="10dp"
                                    android:id="@+id/tv_class_remark_show"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="无"
                                    android:textSize="@dimen/one_level_word"
                                    android:ellipsize="end"
                                    android:textColor="@color/word_color_666666"
                                    android:layout_alignParentRight="true"
                                    android:maxLines="20"/>
                            </RelativeLayout>
                        </RelativeLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/view_line"/>
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>
        </ScrollView>

        <!--无数据-->
        <TextView
            android:gravity="center"
            android:visibility="gone"
            android:id="@+id/layout_tv"
            android:text=""
            android:background="@color/wirte_ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

</LinearLayout>