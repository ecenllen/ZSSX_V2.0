<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="2dp"
    card_view:cardPreventCornerOverlap="true"
    app:cardCornerRadius="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/tv_duty_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"/>
            <TextView
                android:id="@+id/tv_duty_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divide_line"/>
        <RelativeLayout
            android:id="@+id/layout_duty1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/tv_duty_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安排表"/>
            <TextView
                android:id="@+id/tv_duty_operation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="操作"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/right_arrow_normal"
                android:drawablePadding="8dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_duty2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <TextView
                android:id="@+id/tv_duty_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="值班领导："/>
            <TextView
                android:id="@+id/tv_duty_person_name"
                android:paddingLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_duty_person"
                android:text="无" />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>