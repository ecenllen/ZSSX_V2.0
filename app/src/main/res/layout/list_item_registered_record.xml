<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardPreventCornerOverlap="true"
        card_view:cardPreventCornerOverlap="true">
        <LinearLayout
            android:background="@drawable/cardview_backgroud"
            android:id="@+id/layout_item_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_class_section"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/text_class_section"
                        android:textSize="@dimen/one_level_word"
                        android:textColor="@color/word_color_666666"/>
                    <TextView
                        android:id="@+id/tv_class_section2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XXX"
                        android:textSize="@dimen/one_level_word"
                        android:textColor="@color/word_color_666666"/>
                    <TextView
                        android:layout_marginTop="2dp"
                        android:layout_toLeftOf="@+id/tv_show_class_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_course_score1"
                        android:textColor="@color/word_color_666666"
                        android:textSize="@dimen/size40"/>
                    <TextView
                        android:layout_alignParentRight="true"
                        android:id="@+id/tv_show_class_score"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/word_color_666666"
                        android:textSize="@dimen/one_level_word"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/divide_line"/>
                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/tv_course_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="course name long course name long course name long course name"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textSize="@dimen/size40"
                    android:textColor="@color/word_color_666666" />
                <RelativeLayout
                    android:id="@+id/layout_class_name"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_class_name_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:text="@string/text_class_name"
                        android:textSize="@dimen/size40"
                        android:textColor="@color/word_color_666666">
                    </TextView>
                    <TextView
                        android:id="@+id/tv_class_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="class name long name long name"
                        android:textSize="@dimen/size40"
                        android:textColor="@color/word_color_666666"
                        android:layout_toRightOf="@+id/tv_class_name_show"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:gravity="center"
                        android:id="@+id/tv_state_text"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:text="@string/text_attendance_state"
                        android:textColor="@color/word_color_666666"
                        android:textSize="@dimen/size40"/>
                    <TextView
                        android:gravity="center"
                        android:id="@+id/tv_show_attendance_state"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/tv_state_text"
                        android:text="0/0"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/size40"/>

                    <LinearLayout
                        android:visibility="invisible"
                        android:gravity="center"
                        android:id="@+id/layout_status_show"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal">
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_status"
                            android:textColor="@color/word_color_999999"
                            android:textSize="@dimen/two_level_word"/>
                        <TextView
                            android:id="@+id/tv_show_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textColor="@color/word_color_999999"
                            android:textSize="@dimen/two_level_word"/>
                    </LinearLayout>
                </RelativeLayout>

                <!--各种状态人数-->
                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_late_person"
                            android:textColor="@color/word_color_999999"
                            android:textSize="@dimen/two_level_word"/>
                        <TextView
                            android:id="@+id/tv_late_person"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/word_color_999999"
                            android:textSize="@dimen/two_level_word"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_leave_person"
                            android:textColor="@color/word_color_999999"
                            android:textSize="@dimen/two_level_word"/>
                        <TextView
                            android:id="@+id/tv_leave_person"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/word_color_999999"
                            android:textSize="@dimen/two_level_word"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_absenteeism_person"
                            android:textColor="@color/word_color_999999"
                            android:textSize="@dimen/two_level_word"/>
                        <TextView
                            android:id="@+id/tv_truant_person"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/word_color_999999"
                            android:textSize="@dimen/two_level_word"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/text_public_holidays"
                            android:textColor="@color/word_color_999999"
                            android:textSize="@dimen/two_level_word"/>
                        <TextView
                            android:id="@+id/tv_holiday_person"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/word_color_999999"
                            android:textSize="@dimen/two_level_word"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right_arrow_normal"
                android:layout_gravity="center"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <!-- 得分和备注默认隐藏，有需要在代码中更改成visible-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="61.5dp"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        android:visibility="gone">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/view_line"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/text_course_score2"/>
            <EditText
                android:layout_marginRight="8dp"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:inputType="number"
                android:maxLength="3"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/view_line"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical">
            <TextView
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/text_remark2"/>
            <EditText
                android:layout_marginLeft="50dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_alignParentRight="true"
                android:maxLength="300"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/view_line"/>
    </LinearLayout>
</LinearLayout>