<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/main_color</item>
        <item name="colorAccent">@color/main_color</item>
        <!--设置按钮大写为false-->
        <item name="android:textAllCaps">false</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyAwesomeAnimation</item>
    </style>

    <!-- 弹框的效果-->
    <style name="AnimBottom">
        <item name="android:windowEnterAnimation">@anim/pop_show_anim</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/pop_hidden_anim</item>
        <!-- 指定消失的动画xml -->
    </style>

    <!--圆角dialog-->
    <style name="dialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/alpha_gray</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
        <item name="android:background">@color/alpha_gray</item>
        <item name="android:radius">8dp</item>
    </style>

    <!-- 弹框样式 -->
    <style name="myDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item><!--除去title-->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@color/transparent</item><!--除去背景色-->
        <item name="android:radius">10dp</item>
    </style>

    <!-- DormitoryItemNameDialog-->
    <style name="dormitory_itemName_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
        <item name="android:radius">10dp</item>
    </style>


    <!--tablayout自定义样式-->
    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <!--<item name="tabMaxWidth">@dimen/tab_max_width</item>-->
        <item name="tabIndicatorColor">@color/main_color</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">10dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">fill</item>
        <item name="tabPaddingEnd">10dp</item>
        <item name="tabTextAppearance">@style/CustomTabTextAppearance</item>
        <item name="android:textSize">12sp</item>
        <item name="tabSelectedTextColor">@color/main_color</item>
    </style>

    <style name="AdjustCourseTabLayout" parent="Widget.Design.TabLayout">
        <!--<item name="tabMaxWidth">@dimen/tab_max_width</item>-->
        <item name="tabIndicatorColor">@color/main_color</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">fill</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextAppearance">@style/CustomTabTextAdjustCourse</item>
        <item name="tabSelectedTextColor">@color/main_color</item>
    </style>
    <style name="PatrolTabLayout" parent="Widget.Design.TabLayout">
        <!--<item name="tabMaxWidth">@dimen/tab_max_width</item>-->
        <item name="tabIndicatorColor">@color/gray_666666</item>
        <item name="tabIndicatorHeight">1dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">fill</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabTextAppearance">@style/CustomTabTextPatrol</item>
        <item name="tabSelectedTextColor">@color/main_color</item>
    </style>

    <style name="Theme.Dialog.NoTitle.Translucent" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item><!-- 边框 -->
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item><!-- 半透明 -->
        <item name="windowNoTitle">true</item><!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item><!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item><!-- 模糊 -->
        <item name="windowActionBar">false</item>
    </style>

    <style name="CustomTabTextAdjustCourse" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#999999</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="CustomTabTextPatrol" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#999999</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#323232</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="customCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_selector</item>
        <item name="android:background">@null</item> <!--无背景阴影效果 -->
    </style>

    <!--启动动画-->
    <style name="Animation.MyAwesomeAnimation" parent="android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/animation_in</item>
        <item name="android:activityOpenExitAnimation">@anim/animation_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/back_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/back_right_out</item>
    </style>
    <!-- 在中间显示dialog -->
    <style name="center_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- 从底部弹出popup  -->
    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
        <!-- 指定消失的动画xml -->
    </style>

    <style name="bottomDialog" parent="@style/AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!-- 日程日历 -->
    <style name="weekName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 课表行 -->
    <style name="schedule_row">
        <item name="android:layout_width">@dimen/schedule_left_width</item>
        <item name="android:layout_height">@dimen/schedule_course_height</item>
        <item name="android:textSize">@dimen/schedule_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#999999</item>
        <item name="android:layout_marginBottom">@dimen/schedule_magin_bottom</item>
        <item name="android:background">#ffffff</item>
    </style>

    <!-- 课表列 -->
    <style name="schedule_col">
        <item name="android:layout_width">@dimen/schedule_col_close_width</item>
        <item name="android:layout_height">@dimen/schedule_top_height</item>
        <item name="android:textSize">@dimen/schedule_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/textColor_gray</item>
        <item name="android:layout_marginBottom">@dimen/schedule_magin_bottom</item>
        <item name="android:background">@color/schedule_backgrouond_def</item>
    </style>

    <!-- 课表状态 -->
    <style name="schedule_state">
        <item name="android:layout_width">@dimen/schedule_course_open_state_height_width</item>
        <item name="android:layout_height">@dimen/schedule_course_open_state_height_width</item>
        <item name="android:textSize">@dimen/schedule_course_open_state_size</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/schedule_course_open_state_margin</item>
        <item name="android:visibility">gone</item>
    </style>

    <!-- spinner -->
    <style name="spinner_style">
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:background">@null</item>
        <item name="android:dropDownVerticalOffset">40dp</item>
    </style>

    <style name="drop_down_list_style">
        <item name="android:windowEnterAnimation">@anim/list_pop_show_anim</item>
        <item name="android:windowExitAnimation">@anim/list_pop_hidden_anim</item>

    </style>

    <style name="radio_btn_duty_style1">

    </style>

    <style name="myDropTheme" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>


    <style name="mystyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/add_page_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/add_page_out_anim</item>
    </style>

    <style name="myDialogAnimationTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="add_page_item_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textColor">@color/gray_666666</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    <!-- 底部弹出dialog -->
    <style name="SelectDialogStyle" parent="AppTheme">
        <item name="android:windowBackground">@color/background_select</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="SwitchButtonStyle">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:layout_gravity">center</item>

    </style>

    <!--宿舍评分录入选项配置名称-->
    <style name="dormitory_option_item_name">
        <item name="android:textColor">@color/word_color_666666</item>
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="dormitory_main_list_sub_item_name">
        <item name="android:textColor">@color/word_color_999999</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="dormitory_option_item_score">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColor_def_bright</item>
    </style>

    <style name="dormitory_subTitle">
        <item name="android:textSize">@dimen/text_size_s14</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dormitory_cardView" parent="CardView">
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="dormitory_class_list_cardView" parent="CardView">
        <item name="android:layout_margin">4dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>


</resources>
